        <td><%= link_to 'Edit', edit_group_question_alternative_path(group_question_alternative) %></td>
        <td><%= link_to 'Destroy', group_question_alternative, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

