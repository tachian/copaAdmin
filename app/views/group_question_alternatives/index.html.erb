<h1>Listing group_question_alternatives</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Correct</th>
      <th>Group question statement</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @group_question_alternatives.each do |group_question_alternative| %>
      <tr>
        <td><%= group_question_alternative.name %></td>
